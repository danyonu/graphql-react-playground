{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "comma-dangle": "off",
      "no-underscore-dangle": "off",
      "arrow-body-style": "off",
      "no-shadow": "off",
      "no-use-before-define": "off",
      "no-useless-catch": "off"
    }
}